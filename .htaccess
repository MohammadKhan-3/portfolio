# mod_rewrite starts here

RewriteEngine on

# does not apply to existing directors, meaning that if the folder exists on the server then don't change anything & don't run Rule!

RewriteCond %{REQUEST_FILENAME} !-d

# Check for file in directory with .html extension

RewriteCond %{REQUEST_FILENAME}/.html -f

# Here we actually show the page that has the .html extension (below is a regular expression)

RewriteRule ^(.*)$ $1.html [NC,L]



ErrorDocument 404 /page_not_found.html
